.contenedor
  height: 100vh
  width: 100vw

  .botonera
    position: absolute
    padding: 20px
    height: 100vh
    width: 200px
    display: inline-block

    .boto-header
      height: 10%
      text-align: center
      
      span
        color: white
        font-weight: bold
        text-transform: uppercase

    .boto-body
      height: 85%
      
      .btn-menu
        width: 100%
        color: white
        font-weight: bold

    .boto-footer
      height: 5%

      .btn-salida
        width: 100%
        color: white
        font-weight: bold

  .cuerpo-contenedor
    position: absolute
    left 200px
    padding: 5px
    height: 100vh
    width: calc(100vw - 200px)
    display: inline-block

    .cuerpo-card
      height: 100%
